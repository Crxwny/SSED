{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/person.schema.json",
  "title": "Person",
  "description": "Schema f√ºr das Beispielobjekt aus Aufgabe A7.",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "firstname", "lastname", "email", "age", "skills"],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1,
      "description": "Eindeutige ID der Person"
    },
    "firstname": {
      "type": "string",
      "minLength": 2
    },
    "lastname": {
      "type": "string",
      "minLength": 2
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "age": {
      "type": "integer",
      "minimum": 0,
      "maximum": 120
    },
    "skills": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 2
      }
    }
  }
}

